{
  "compileOnSave": true,
  "version": "3.4.5",
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "declaration": true,
    "watch": true,
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "inlineSources": true,
    "jsx": "react",
    "noEmitOnError": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitAny": false
  },
  "exclude": ["test/*", "dist/*"]
}